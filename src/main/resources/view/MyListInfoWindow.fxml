<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.stage.Stage?>

<fx:root type="Stage" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene>
         <Pane prefHeight="355.0" prefWidth="431.0" styleClass="Panes" stylesheets="@application.css">
            <children>
               <ImageView fx:id="imageView" fitHeight="112.0" fitWidth="124.0" layoutX="14.0" layoutY="14.0" onMouseClicked="#openImage" pickOnBounds="true" preserveRatio="true" />
               <Label layoutX="144.0" layoutY="15.0" text="Info:" textFill="WHITE" />
               <TextArea fx:id="infoTextArea" editable="false" layoutX="195.0" layoutY="14.0" opacity="0.44" prefHeight="121.0" prefWidth="222.0" wrapText="true" />
               <Label layoutX="16.0" layoutY="149.0" text="Current episode:" textFill="WHITE" />
               <TextField fx:id="currEpField" layoutX="121.0" layoutY="145.0" opacity="0.67" promptText="Current episode" />
               <Label layoutX="14.0" layoutY="186.0" text="Total episodes:" textFill="WHITE" />
               <TextField fx:id="totalEpField" editable="false" layoutX="121.0" layoutY="194.0" opacity="0.61" promptText="Total episodes" />
               <Button fx:id="fillerBtn" layoutX="285.0" layoutY="165.0" mnemonicParsing="false" onAction="#openFillers" text="See fillers" />
               <Button fx:id="urlBtn" layoutX="35.0" layoutY="232.0" mnemonicParsing="false" onAction="#copyURL" text="Copy URL" />
               <Button fx:id="browserBtn" layoutX="289.0" layoutY="232.0" mnemonicParsing="false" onAction="#openBrowser" text="Open in browser" />
               <Button layoutX="14.0" layoutY="281.0" mnemonicParsing="false" onAction="#remove" prefHeight="53.0" prefWidth="91.0" text="Remove from MyList" textAlignment="CENTER" wrapText="true" />
               <Button layoutX="156.0" layoutY="281.0" mnemonicParsing="false" onAction="#move" prefHeight="53.0" prefWidth="96.0" text="Move to ToWatch" textAlignment="CENTER" wrapText="true" />
               <Button layoutX="293.0" layoutY="281.0" mnemonicParsing="false" onAction="#closeWindow" prefHeight="53.0" prefWidth="95.0" text="Close" textAlignment="CENTER" wrapText="true" />
               <Button layoutX="156.0" layoutY="232.0" mnemonicParsing="false" onAction="#copyName" text="Copy name" />
            </children>
         </Pane>
        </Scene>
    </scene>
</fx:root>
