               <font>
                  <Font name="Dubai Medium" size="12.0" />
               </font>
            </TextArea>
            <Button layoutX="151.0" layoutY="258.0" mnemonicParsing="false" onAction="#closeWindow" prefHeight="53.0" prefWidth="93.0" style="-fx-border-radius: 20;" text="Close" textAlignment="CENTER" wrapText="true" />
